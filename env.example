# Database
DATABASE_URL="postgresql://username:password@localhost:5432/manehej_admin_db"

# JWT Configuration
ACCESS_TOKEN_SECRET="your-super-secret-access-token-key-change-this-in-production-must-be-at-least-32-characters-long"
REFRESH_TOKEN_SECRET="your-super-secret-refresh-token-key-change-this-in-production-must-be-at-least-32-characters-long"
ACCESS_TOKEN_EXPIRY="15m"
REFRESH_TOKEN_EXPIRY="7d"
ACCESS_TOKEN_MAX_AGE="15m"
REFRESH_TOKEN_MAX_AGE="7d"

# Server Configuration
PORT=3001
NODE_ENV="development"

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:3000"

# Optional: Logging
LOG_LEVEL="info"

# BetterAuth setup
# check https://www.better-auth.com/docs/installation
BETTER_AUTH_SECRET="replace-with-32-byte-base64-secret"
# Base URL of the app
BETTER_AUTH_URL="http://localhost:3001

# Google OAuth 2.0 Credentials for normal user authentication
GOOGLE_CLIENT_ID="client-id-from-google-console"
GOOGLE_CLIENT_SECRET="client-secret-from-google-console"